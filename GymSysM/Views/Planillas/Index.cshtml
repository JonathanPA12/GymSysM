@model IEnumerable<GymSysM.Models.Planilla>

@{
    ViewData["Title"] = "Index";
}

<h1>Planilla</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DNI
            </th>
            <th>
                Horas trabajadas
            </th>
            <th>
                Salario por Hora
            </th>
            <th>
                Salario Bruto
            </th>
            <th>
                Salario Neto
            </th>
            <th>
                CCSS
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasTrabajadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioBruto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioNeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ccss)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlanilla">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlanilla">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlanilla">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
