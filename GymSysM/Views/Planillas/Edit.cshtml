                <label>SalarioHora</label>
                <input asp-for="SalarioHora" class="form-control" />
                <span asp-validation-for="SalarioHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Salario Bruto</label>
                <input asp-for="SalarioBruto" class="form-control" />
                <span asp-validation-for="SalarioBruto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Salario Neto</label>
                <input asp-for="SalarioNeto" class="form-control" />
                <span asp-validation-for="SalarioNeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>CCSS</label>
                <input asp-for="Ccss" class="form-control" />
                <span asp-validation-for="Ccss" class="text-danger"></span>
